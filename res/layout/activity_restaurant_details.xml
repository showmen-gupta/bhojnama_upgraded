<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:padding="8dip" >

    <TextView
        android:id="@+id/fourthLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8px"
        android:layout_marginRight="10px"
        android:gravity="center"
        android:text="1Km"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="TODO"
        android:src="@drawable/cropped_image" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/icon"
        android:padding="16dip" >
    </RelativeLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/fourthLine"
        android:layout_toRightOf="@+id/ImageView01"
        android:text=" friends were here" 
         android:textSize="14sp"/>

    <TextView
        android:id="@+id/secondLine"
        android:layout_width="fill_parent"
        android:layout_height="20dip"
        android:layout_above="@+id/imageView2"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/fourthLine"
        android:ellipsize="marquee"
        android:layout_marginTop="10px"
        android:singleLine="true"
        android:text="Seafood Fish and Fast "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/views"
        android:layout_alignBottom="@+id/views"
        android:layout_toRightOf="@+id/views"
        android:text="Reviews"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_toRightOf="@+id/views"
        android:src="@drawable/star_active" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secondLine"
        android:layout_toRightOf="@+id/textView2"
        android:src="@drawable/star_inactive" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginRight="14dp"
        android:src="@drawable/star_inactive" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignLeft="@+id/textView1"
        android:layout_marginLeft="32dp"
        android:text="1.5"
        android:textColor="#009900"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toLeftOf="@+id/textView1"
        android:text="420"
        android:textColor="#009900"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secondLine"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/imageView4"
        android:src="@drawable/star_inactive" />

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/imageView3"
        android:src="@drawable/star_inactive" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView1"
        android:gravity="center_vertical"
        android:text="Fish and Co."
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/thirdline"
        android:layout_width="fill_parent"
        android:layout_height="25dip"
        android:layout_above="@+id/relativeLayout1"
        android:layout_toRightOf="@+id/imageView1"
        android:ellipsize="marquee"
        android:paddingTop="15px"
        android:singleLine="true"
        android:text="Gulshan,Dhaka"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginRight="10dip"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/relativeLayout1"
        android:text="1,000"
        android:textColor="#009900"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@+id/imageView2"
        android:text="Food Items:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="18dp"
        android:background="#23c08e"
        android:text="Book A Table"
        android:textColor="#fff"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView6"
        android:layout_alignParentRight="true"
        android:background="#23c08e"
        android:text="Submit Review"
        android:textColor="#fff"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignRight="@+id/textView3"
        android:background="#23c08e"
        android:text="Get Me There"
        android:textColor="#fff"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/ImageView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="22dp"
        android:contentDescription="TODO"
        android:src="@drawable/cropped_image" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_alignTop="@+id/ImageView02"
        android:layout_toRightOf="@+id/imageView1"
        android:gravity="center_vertical"
        android:text="Fried Squid"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="fill_parent"
        android:layout_height="20dip"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TextView01"
        android:layout_toRightOf="@+id/imageView1"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Fried Squid with chips "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ImageView02"
        android:layout_alignLeft="@+id/TextView02"
        android:text="Price:500tk" />

</RelativeLayout>