<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/button_padding"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/view_pager_img"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_view_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitCenter"
        android:padding="5dp" />

    <TextView
        android:id="@+id/txt_view_comments_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_view_details"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:text="TextView"
        android:textColor="@color/light_green"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_view_details"
        android:layout_below="@+id/view_pager_img"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textColor="@color/light_green"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_view_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view_pager_img"
        android:layout_below="@+id/title"
        android:layout_marginTop="20dp"
        android:text="TextView" />

    <Button
        android:id="@+id/btnFacebookShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/title"
        android:layout_marginRight="14dp"
        android:drawableLeft="@drawable/share"
        android:drawablePadding="5dp"
        android:background="@color/white"
        android:text="SHARE"
        android:textSize="16sp" />

</RelativeLayout>